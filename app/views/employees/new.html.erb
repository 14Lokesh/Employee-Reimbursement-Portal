<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h1 class="text-center">Create Employee</h1>
      <%= form_for @employee, class: "my-form" do |form| %>
        <div class="form-group">
          <%= form.label :name, class: 'required' %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Employee name" , required: true %>
          <p class='error'><%= show_errors(@employee, :name) %></p>

        </div>
        <div class="form-group">
         <%= form.label :company_id, "Company",class: 'required' %>
          <%= form.collection_select :company_id, @companies, :id, :name, prompt: "Select a company", required: true %>
          <p class='error'><%= show_errors(@employee, :company_id) %></p>
        </div>

        <%= form.submit "Sign Up", class: " mt-3 button-design form-control" %>
      <% end %>
    </div>
  </div>
</div>