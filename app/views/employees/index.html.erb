<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
    <h1 class="text-center">Employees Details</h1>

    <% if @employees.present? %>
                <div class="table-responsive">


      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Company</th>
            <th colspan="2" class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td><%= employee.name %></td>
              <td><%= employee.company.name %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee), class: 'btn btn-warning btn-sm' %></td>
              <td><%= button_to 'Destroy', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <% else %>
      <b> <%=  "NO RECORD AVAILABLE" %> </b> 
      <% end %>
    </div>
  </div>
</div>
