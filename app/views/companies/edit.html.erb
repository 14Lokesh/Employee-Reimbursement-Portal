<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-4">Edit Company</h1>

      <%= form_with(model: @company) do |form| %>
        <div class="form-group">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', required: true %>
          
        </div>

        <div class="form-group">
          <%= form.label :employee_count, class: 'form-label' %>
          <%= form.number_field :employee_count, class: 'form-control', required: true %>
         
        </div>

        <div class="form-group">
          <%= form.label :total_reimbursement, class: 'form-label' %>
          <%= form.number_field :total_reimbursement, step: '0.01', class: 'form-control', required: true %>
         
        </div>

        <div class="form-group mt-4">
          <%= form.submit 'Update Company', class: 'btn btn-primary' %>
          <%= link_to 'Back', companies_path, class: 'btn btn-secondary ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
