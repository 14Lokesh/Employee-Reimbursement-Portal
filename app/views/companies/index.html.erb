<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
    <h1 class="text-center">Companies Details</h1>
    <% if @companies.present? %>
                <div class="table-responsive">


      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Employee Count</th>
            <th>Total Reimbursement</th>
            <th colspan="2" class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.name %></td>
              <td><%= company.employee_count %></td>
              <td><%= number_to_currency(company.total_reimbursement, unit: "â‚¹") %></td>
              <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-warning btn-sm' %></td>
              <td><%= button_to 'Destroy', company_path(company), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <% else %>
      <b> <%=  "NO RECORD AVAILABLE" %> </b> 
      <% end %>
    </div>
  </div>
</div>
