<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h1 class="text-center">Create Company</h1>
      <%= form_for @company, class: "my-form" do |form| %>
        <div class="form-group">
          <%= form.label :name, class: 'required' %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" , required: true%>
          <p class='error'><%= show_errors(@company, :name) %></p>

        </div>
        <div class="form-group">
          <%= form.label :employee_count, class: 'required' %>
          <%= form.text_field :employee_count, class: "form-control", placeholder: "Enter  Employee Count", required: true%>
          <p class='error'><%= show_errors(@company, :employee_count) %></p>
        </div>
        <div class="form-group">
          <%= form.label :total_reimbursement, class: 'required' %>
          <%= form.text_field :total_reimbursement, class: "form-control", placeholder: "Enter Total Reimbursement", required: true%>
           <p class='error'><%= show_errors(@company, :password) %></p>

        </div>
        <%= form.submit "Sign Up", class: " mt-3 button-design form-control" %>
      <% end %>
    </div>
  </div>
</div>