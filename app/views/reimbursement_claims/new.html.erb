<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <h1 class="text-center">ReimbursementClaim</h1>
      <%= form_for @reimbursement_claim, class: "my-form" do |form| %>

        <div class="form-group">
          <%= form.label :employee_id, "Employee", class: 'required' %>
          <%= form.collection_select :employee_id, @employees, :id, :name, prompt: "Select an employee", required: true %>
        </div>

        <div class="form-group">
          <%= form.label :purpose, class: 'required' %>
          <%= form.text_field :purpose, class: "form-control", placeholder: "Enter Purpose" , required: true%>
          <p class='error'><%= show_errors(@reimbursement_claim, :purpose) %></p>
        </div>

        <div class="form-group">
          <%= form.label :amount, class: 'required' %>
          <%= form.text_field :amount, class: "form-control", placeholder: "Enter Amount", required: true%>
          <p class='error'><%= show_errors(@reimbursement_claim, :amount) %></p>
        </div>
        <div class="form-group">
          <%= form.label :date_of_expenditure, class: 'required' %>
          <%= form.date_field :date_of_expenditure, class: "form-control", placeholder: "Enter Date", required: true%>
           <p class='error'><%= show_errors(@reimbursement_claim, :date_of_expenditure) %></p>
        </div>

        <div class="form-group">
          <%= form.label :receipt, class: 'required' %>
          <%= form.file_field :receipt, class: "form-control", placeholder: "Enter Date", required: true%>
           <p class='error'><%= show_errors(@reimbursement_claim, :receipt) %></p>
        </div>
        <%= form.submit "Submit", class: " mt-3 button-design form-control" %>
      <% end %>
    </div>
  </div>
</div>