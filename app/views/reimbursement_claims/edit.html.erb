<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-4">Edit Claims</h1>

      <%= form_with(model: @reimbursement_claim) do |form| %>
        <div class="form-group">
          <%= form.label :purpose, class: 'form-label' %>
          <%= form.text_field :purpose, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= form.label :amount, class: 'form-label' %>
          <%= form.text_field :amount, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= form.label :date_of_expenditure, class: 'form-label' %>
          <%= form.date_field :date_of_expenditure, class: 'form-control', required: true %>
        </div>

        <div class="form-group">
          <%= form.label :employee_id, class: 'form-label' %>
       <%= form.collection_select :employee_id, Employee.all, :id, :name, { include_blank: 'Select a Employee' }, { class: 'form-control', required: true } %>
        </div>

        <div class="form-group mt-4">
          <%= form.submit 'Update Claim', class: 'btn btn-primary' %>
          <%= link_to 'Back', reimbursement_claims_path, class: 'btn btn-secondary ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
